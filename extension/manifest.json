{
  "manifest_version": 3,
  "name": "Quick Popup Translator",
  "version": "1.0",
  "description": "選字右鍵→彈出小視窗自動查翻譯",
  "permissions": ["contextMenus", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
