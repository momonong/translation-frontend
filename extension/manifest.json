{
  "manifest_version": 3,
  "name": "Lexilight Translator",
  "version": "1.0",
  "description": "Quick translation without the hassle.",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting",
    "notifications" 
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "128": "icon.png"
  },

  "background": {
    "service_worker": "assets/background.js" 
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/config.js",
        "assets/content-script.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "index.html", 
        "pdf.html",
        "assets/*"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}