{
    "manifest_version": 3,
    "name": "Semantic Keyword Extractor",
    "version": "1.0",
    "description": "Extract keywords from selected text and open a semantic helper UI.",
  "permissions": ["contextMenus", "tabs"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_title": "Semantic Helper"
  }
}
